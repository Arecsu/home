---
interface Props {
   contactVisible?: boolean
}

const { contactVisible = false } = Astro.props
---

<header>
   <a href="./" class="no-underline header-title">alejandro r.</a>
   {contactVisible &&
      <div class="header-contact">
         <a href="mailto:hello@malejandro.com">email</a>
         <span>//</span>
         <a href="https://github.com/arecsu" target="_blank">github</a>
         <div class="header-contact-break"></div>
         <span>//</span>
         <a href="https://instagram.com/malejand_ro" target="_blank">instagram</a>
         <!-- <span>//</span>
         <a href="https://www.last.fm/user/alejandro9r" target="_blank">last.fm</a> -->
      </div>
   }
</header>

<style lang="scss">
   header {
      grid-area: header;
      display: grid;
      grid-template-columns: subgrid;
      // place-content: space-between;
      grid-template-rows: subgrid;
      width: 100%;
   }
   
   .header-contact-break {
      display: none;
   }

   .header-title {
      white-space: nowrap;
      grid-area: header-title;
   }

   .header-contact {
      grid-area: header-contact;
      // width: 100%;
      display: flex;
      column-gap: 1rem;
      row-gap: .2rem;
      flex-wrap: wrap;
      > * {
         white-space: nowrap;
         text-decoration: none;
      }

      @media (max-width: $mobile-layout-breakpoint) {
         justify-content: end;
         align-content: start;
      }
   }

   @media (max-width: $header-contact-breakpoint) {
      .header-contact-break {
         display: block;
         flex-basis: 100%;
         height: 0;
      }
   }

   
</style>
