---
import Contact from "@components/Contact.astro"

interface Props {
   contactVisible?: boolean
}

const { contactVisible = false } = Astro.props
---

<header>
   <a href="/" class="no-underline header-title">alejandro r.</a>
   {contactVisible &&
      <section class="header-contact">
         <Contact />
      </section>
   }
</header>

<style lang="scss">
   header {
      grid-area: header;
      display: grid;
      grid-template-columns: subgrid;
      // place-content: space-between;
      grid-template-rows: subgrid;
      width: 100%;
   }
   
   .header-contact-break {
      display: none;
   }

   .header-title {
      white-space: nowrap;
      grid-area: header-title;
      place-self: start;
      // margin-right: 2rem;
   }

   .header-contact {
      grid-area: header-contact;
      @media (max-width: $mobile-layout-breakpoint-1) {
         justify-content: end;
         align-content: start;
         margin-left: 4rem;
      }
   }
   
</style>
