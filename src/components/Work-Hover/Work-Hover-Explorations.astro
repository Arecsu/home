---
import { Image } from "astro:assets";
import explorationsImage from "@media/explorations-color.jpg";
---

<div class="explorations-on-hover-grid-overlay pointer-events-none">
	<Image
		class="explorations-image"
		src={explorationsImage}
		alt=""
		width="3840"
		format="avif"
		quality="80"
		decoding="sync"
		loading="eager"
	/>
</div>

<style lang="scss">
	.explorations-on-hover-grid-overlay {
		visibility: hidden;
		// display: grid;
		// grid-template-rows: subgrid;
		// grid-template-columns: subgrid;
      z-index: -1;
		grid-column: 1 / -1;
		grid-row: 1 / -1;
		overflow: hidden;
		// â†“ it won't affect the layout and `auto` sizes calculation of the grid-templates
		position: relative;
		pointer-events: none;
		color: black;
      height: 100vh;
	}

	.explorations-image {
      object-fit: cover;
      object-position: 100% 29%;
      width: 100%;
      height: 100%;
	}
</style>
