---
interface Props {
   size?: string,
   color?: string,
   marginInline?: string,
   class?: string
}

const { size = '1em', color = 'currentColor', marginInline = '0', class: className = '' } = Astro.props;
---

<span 
  class:list={['icon', className]}
  style={`width: ${size}; height: ${size}; color: ${color}; margin-inline: ${marginInline}`}>
  <slot />
</span>

<style>
  .icon {
    display: inline-block;
    vertical-align: middle;
    position: relative;
    bottom: 0.12em;
  }
  .icon :global(svg) {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }
  /*
  :global(.btn-style-1) .icon { }
  */
</style>