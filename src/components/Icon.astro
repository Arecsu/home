---
interface Props {
   size?: string,
   color?: string,
   marginInline?: string
}

const { size = '1em', color = 'currentColor', marginInline = '0' } = Astro.props;
---

<span class="icon" style={`width: ${size}; height: ${size}; color: ${color}; margin-inline: ${marginInline}`}>
  <slot />
</span>

<style>
  .icon {
    display: inline-block;
    vertical-align: middle;
    position: relative;
    bottom: 0.125em;
  }
  .icon :global(svg) {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }
</style>