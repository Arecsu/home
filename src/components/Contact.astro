<script>
   const emailDialogButton = document.querySelectorAll<HTMLButtonElement>('.email-dialog-button')
   const emailDialog = document.querySelector<HTMLDialogElement>('.email-dialog')
   const emailSpan = document.querySelector<HTMLSpanElement>('.email-dialog .email') 
   const emailDialogSendMail = document.querySelector<HTMLAnchorElement>('.email-dialog .send-mail')
      
   emailDialogButton!.forEach(button => {
      button.addEventListener('click', () => {
         emailSpan!.textContent = atob(atob(emailSpan!.getAttribute('data-email')!.toString()))
         emailDialogSendMail!.href = 'mailto:' + emailSpan!.textContent
         emailDialog!.showModal()
      })
   })  
</script>

