<script is:inline>
(function () {

const LOCAL_STORAGE_KEY = 'preferredLang';

// Determine the preferred language
const getPreferredLanguage = () => {
   const storedLang = localStorage.getItem(LOCAL_STORAGE_KEY);
   if (storedLang) return storedLang;

   const browserLang = navigator.language || navigator.userLanguage;
   if (browserLang.startsWith('es')) return 'lang-es';

   return 'lang-en';
};

// Append the class to the <html> element
const appendHtmlLanguageClass = () => {
   const preferredLang = getPreferredLanguage();
   document.documentElement.classList.add(preferredLang);
};

appendHtmlLanguageClass();

})();
</script>